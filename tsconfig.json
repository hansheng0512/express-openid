{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "es6", "dom", "es2015", "es2017", "esnext.asynciterable"],
    "moduleResolution": "Node",
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
  },
  "include": ["**/*", "typings.d.ts"],
  "exclude": ["node_modules"]
}